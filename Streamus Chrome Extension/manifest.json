{
  "name": "Streamus™ (Beta!)",
  "version": "0.64",
  "manifest_version": 2,
  "description": "A YouTube music player built into your browser. Stream videos and songs; share playlists with friends!",
  "background":{
    "page": "background.htm"
  },
  "browser_action": {
    "default_icon": {
       "19": "images/streamus_icon19.png",
       "38": "images/streamus_icon38.png"
    },
    "default_title": "Streamus: Rediscover YouTube.",
    "default_popup": "foreground.htm"
  },
  "permissions": [
    "pushMessaging",
	"notifications",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/",
	"http://localhost:61975/Streamus/",
	"http://streamus.apphb.com/"
	],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/embed/*"],
	  "all_frames": true,
      "js": ["js/thirdParty/jquery.js", "js/youTubeIFrameInject.js"]
    },
    {
      "matches": ["*://*.youtube.com/watch?v*"],
      "css": ["css/youTubeInject.css"],
	  "all_frames": true,
      "js": ["js/thirdParty/underscore.js", "js/thirdParty/jquery.js", "js/youTubeInject.js"]
    },
    {
      "matches": ["*://*.share.streamus.com/*"],
	  "all_frames": true,
      "js": ["js/thirdParty/underscore.js", "js/thirdParty/jquery.js", "js/shareInject.js"]
    }
  ],
  "commands": {
    "nextVideo": {
      "suggested_key": { "default": "Alt+P" },
      "description": "Tells the player to play next video."
    },
    "previousVideo": {
      "suggested_key": { "default": "Alt+E" },
      "description": "Tells the player to play previous video."
    },
    "toggleVideo": {
      "suggested_key": { "default": "Ctrl+P" },
      "description": "Tells the player to toggle the video state."
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
		"windows": "Ctrl+B"
      }
    }
  },
  "icons": {
    "48": "images/streamus_icon48.png",
    "128": "images/streamus_icon128.png"
  },
  "web_accessible_resources": [
    "css/youTubeInject.css"
  ],
  "content_security_policy": 
    "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://s.ytimg.com; object-src 'self'"
}