{
  "name": "Streamus™ (Beta!)",
  "version": "0.55",
  "manifest_version": 2,
  "description": "A YouTube music player built into your browser. Stream videos and songs; share playlists with friends!",
  "background":{
    "page": "background.htm"
  },
  "browser_action": {
    "default_icon": {
       "19": "images/Yellow 4.png"
    },
    "default_title": "Streamus™ (Beta!)",
    "default_popup": "foreground.htm"
  },
  "permissions": [
    "pushMessaging",
    "contextMenus",
    "clipboardWrite",
	"notifications",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://www.geoplugin.net/",
    "http://www.youtube.com/",
    "https://www.youtube.com/",
	"http://localhost:61975/Streamus/",
	"http://streamus.apphb.com/",
	"http://www.youtube.com/embed/undefined?enablejsapi=1"
	],
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/embed/*"],
      "css": ["css/inject.css"],
	  "all_frames": true,
      "js": ["js/thirdParty/underscore.js", "js/thirdParty/jquery.js", "js/inject.js"]
    },
    {
      "matches": ["*://www.youtube.com/watch?v*"],
      "css": ["css/inject.css"],
	  "all_frames": true,
      "js": ["js/thirdParty/underscore.js", "js/thirdParty/jquery.js", "js/inject.js"]
    },
    {
      "matches": ["http://www.facebook.com/robots.txt*"],
      "js": ["js/thirdParty/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    }
  ],
  "key": "MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQDmO/I2g0AsHj5gwKYcAv19xa/E4FYE3gD1DtReHysli/YvzOX2X/VOgPMNCB9d5PvuWNH0xud21ztmk7wsNxKLcEuDTENgGqA9voTTG+3hgT1zH5R7rm8E0Kw590KhNattqwXkoRqdvavMjnUzlB9gDbU1duI1V8U03etW4Ta8EwIDAQAB",
  "commands": {
    "nextVideo": {
      "suggested_key": { "default": "Alt+P" },
      "description": "Tells the player to play next video."
    },
    "previousVideo": {
      "suggested_key": { "default": "Alt+E" },
      "description": "Tells the player to play previous video."
    },
    "toggleVideo": {
      "suggested_key": { "default": "Ctrl+P" },
      "description": "Tells the player to toggle the video state."
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+B",
		"windows": "Ctrl+B"
      }
    }
  },
  "icons": {
    "48": "images/streamus_icon48.png",
    "128": "images/streamus_icon128.png"
  },
  "web_accessible_resources": [
    "css/inject.css"
  ],
  "content_security_policy": 
    "script-src 'self' 'unsafe-eval' https://graph.facebook.com https://www.youtube.com https://ssl.google-analytics.com https://gdata.youtube.com https://suggestqueries.google.com https://www.youtube.com https://s.ytimg.com; object-src 'self'"
}