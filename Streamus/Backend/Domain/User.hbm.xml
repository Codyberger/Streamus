<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Streamus" namespace="Streamus.Backend.Domain">
  
  <class name="User" table="[Users]" lazy="false">
    <id name="Id" unsaved-value="00000000-0000-0000-0000-000000000000">
      <generator class="guid" />
    </id>
    
    <property name="Name" not-null="true" />

    <bag name="Streams" inverse="true" cascade="all-delete-orphan" >
      <key column="UserId" />
      <one-to-many class="Stream" />
    </bag>
  </class>
  
</hibernate-mapping>